@model MediKal.Models.MedicineViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="m-5 p-3 row">
    <div class="col-sm-1 col-md-1 col-lg-4 col-xl-4"></div>
    <div class="col-sm-10 col-md-10 col-lg-4 col-xl-4">
        <h4>Add Medicine</h4>
        <hr />
        <div class="form-group">
            <div>
                @Html.EditorFor(model => model.NDCId, new { htmlAttributes = new { @class = "form-control" , placeholder="Enter NDCId"} })
                @Html.ValidationMessageFor(model => model.NDCId, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div>
                <input type="submit" value="search" class="btn btn-default" />
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>

    </div>
</div>
    }

