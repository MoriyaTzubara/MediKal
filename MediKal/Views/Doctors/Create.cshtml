@model MediKal.Models.DoctorViewModel
@*@model DoctorViewModel*@

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_ManagementLayout.cshtml";
}

@using (Html.BeginForm("InviteDoctor", "Doctors"))
{
    @Html.AntiForgeryToken()
    <br />
    <div class="row">
        <div class="col-sm-1 col-md-1 col-lg-4 col-xl-4"></div>
        <div class="col-sm-10 col-md-10 col-lg-4 col-xl-4">
            @{ if (ViewBag.IsSucceeded == null)
                {
                    <div>
                        <img src="~/images/doctor.png" height="100" width="100" />
                        <br />
                        <br />
                        <h4>Invite Doctor</h4>
                        <p>*An invitation email for registration will be sent to the doctor</p>
                        <br />
                        <div class="form-group">
                                        <div>
                                            @Html.TextBox("Id", null, new { @class = "", placeholder = "Enter ID" })
                                            @Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger" })
                                            <br />
                                            @Html.TextBox("Mail", null, new { @class = "", placeholder = "Enter Email" })
                                            @Html.ValidationMessageFor(model => model.Mail, "", new { @class = "text-danger" })
                                            <br />
                                            @Html.Label(Session["ErrorId"].ToString(), new { @class = "text-danger" })
                                        </div>
                        </div>
                        <div class="form-group">
                            <div>
                                <input type="submit" value="Invite" class="btn blue-btn" />
                                <a href="~/Doctors" class="btn green-btn">Back to List</a>
                            </div>
                        </div>
                    </div>
                }
                else if (ViewBag.IsSucceeded == false)
                {
                    <img src="~/images/emoji.png" height="100" width="100" />
                    <br />
                    <br />
                    <h2>Oops something went wrong, please try again later</h2>

                }
                else if (ViewBag.IsSucceeded == true)
                {
                    <img src="~/images/sent.png" height="100" width="100" />
                    <br />
                    <br />
                    <h2>The invitation was sent successfully</h2>
                }
            }
        </div>
    </div>
}
