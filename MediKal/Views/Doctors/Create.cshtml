@model BE.Doctor
@*@model DoctorViewModel*@

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

@using (Html.BeginForm("AddDoctor", "Doctors"))
{
    @Html.AntiForgeryToken()
    <br />
    <div class="row">
        <div class="col-sm-1 col-md-1 col-lg-4 col-xl-4"></div>
        <div class="col-sm-10 col-md-10 col-lg-4 col-xl-4">
            <img src="~/images/doctor.png" height="100" width="100" />
            <br />
            <br />
            <h4>Invite Doctor</h4>
            <p>*An invitation email for registration will be sent to the doctor</p>
            <br />
            <div class="form-group">
                <div>
                    @Html.TextBox("Id", null, new { @class = "form-control", placeholder = "Enter ID" })
                    @Html.Label("Invalid ID number", new { @class = "text-danger" })
                    @*@Html.Label(Session["Message"].ToString(), new { @class = "text-danger" })*@
                    <br />
                    @Html.TextBox("Mail", null, new { @class = "form-control", placeholder = "Enter Email" })
                    @Html.Label("Invalid mail address", new { @class = "text-danger" })
                    @*@Html.Label(Session["Message"].ToString(), new { @class = "text-danger" })*@
                </div>
            </div>
            <div class="form-group">
                <div>
                    <input type="submit" value="Invite" class="btn blue-btn" />
                    <a href="~/Doctors" class="btn green-btn">Back to List</a>
                </div>
            </div>

        </div>
    </div>
}
