@model IEnumerable<BE.Doctor>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_ManagementLayout.cshtml";
}
<div>
    <img src="~/images/add-doctor.png" class="mt-0 pt-0" height="160" />
    <a href="~/Doctors/create" class="social-button">
        <span class="fa fa-lg fa-plus"></span>
    </a>
    <h2 style="display:inline;margin-left:90px;">Doctors <span class="badge badge-pill bg-green">@Model.Count()</span></h2>
</div>
<hr />

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-4 text-left">
            <div class="profile-card text-center shadow">

                <img class="bg-img" src="~/images/green-bg.png">
                <div class="profile-info">
                    <i class="profile-pic"><img src="~/images/doctor (2).png" width="50"></i>
                    <h3 class="hvr-underline-from-center">Dr. @item.UserName</h3>
                    <p><br /> @item.Specialty</p>
                    <p><i class="fa fa-phone"></i><br /> @item.Phone</p>
                    <p><i class="fa fa-envelope-o"></i><br /> @item.Mail</p>
                    <div onclick="location.href='@($"GetPrescriptionsOfDoctor?Id={item.Id}")'" class="btn blue-btn"><i class="fa fa-eye"></i> Prescriptions</div>
                </div>

            </div>
        </div>
    }
</div>

<br />
<br />
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.LicenseNum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Specialty)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Birthday)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserType)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LicenseNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Specialty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Birthday)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserType)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
